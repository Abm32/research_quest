{
    "version": 2,
    "builds": [
      {
        "src": "src/server/index.ts",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 10
        }
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  // Adjust according to your Vite output directory
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/src/server/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/index.html"  // Adjust if your Vite output differs
      }
    ]
  }
  